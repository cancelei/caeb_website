<h1 class="text-3xl font-bold mb-4"><%= current_page.title %></h1>
<div class="prose max-w-none mb-8">
  <%= content.html(:body) %>
</div>

<%# Section to show the latest blog posts %>

<h2 class="text-2xl font-semibold mb-4">Latest Posts</h2>
<div class="space-y-4">
  <% Spina::Blog::Post.order(published_at: :desc).limit(3).each do |post| %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
      <p class="text-gray-700"><%= truncate(post.content, length: 150) %></p>
      <a href="<%= blog_post_path(post) %>" class="text-indigo-600 hover:underline">Read more</a>
    </div>
  <% end %>
</div>
