<h1 class="text-3xl font-bold mb-4"><%= current_page.title %></h1>
<div class="mb-4">
  <%= content :option %>
</div>

<div class="mb-4">
  <h2 class="text-2xl font-semibold mb-2"><%= content :headline %></h2>
  <p class="text-lg"><%= content.text :headline %></p>
  <div class="prose">
    <%= content.html :body %>
  </div>
</div>

<% if has_content?(:image) %>
  <div class="mb-4">
    <%= content.image_tag :image, resize_to_fill: [100, 100] %>
  </div>
<% end %>

<div class="mb-4">
  <%= current_spina_account.content :line %>
</div>

<% repeater current_spina_account.content(:repeater) do |repeater_content| %>
  <div class="mb-2">
    <%= repeater_content.content :line %>
  </div>
<% end %>

<div class="grid grid-cols-2 gap-4 mb-4">
  <% images :image_collection do |image| %>
    <%= content.image_tag image, resize_to_fill: [50, 50], class: "w-12 h-12 object-cover rounded" %>
  <% end %>
</div>

<% repeater :repeater do |project| %>
  <div class="mb-4">
    <div class="prose">
      <%= project.content.html :line %>
    </div>
    <%= project.content.image_tag :image, resize_to_fill: [50, 50], class: "w-12 h-12 object-cover rounded" %>
  </div>
<% end %>
